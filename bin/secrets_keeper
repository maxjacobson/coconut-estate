#!/bin/sh

set -e

secrets_location="$HOME/.local/share/coconut-estate-toolbox/secrets"
mkdir -p "$secrets_location"

echo "Starting development-mode secrets keeper"
RUST_LOG="actix_web=info,secrets_keeper=debug" \
  bin/run-package secrets_keeper run \
  --binding localhost:5001 \
  --location "$secrets_location"
