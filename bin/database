#!/bin/sh

# N.B.
# This file is intended for use in your development environment, and not
# production

set -ex

host_pgdata="$(pwd)/dev/pgdata"
container_pgdata="/coconut/data"
mkdir -p "$host_pgdata"

source ./dev.env

docker run --rm  \
  --name coconut-dev-database \
  -e POSTGRES_USER="$PG_USER" \
  -e POSTGRES_PASSWORD="$PG_PASSWORD" \
  -e PGDATA="$container_pgdata" \
  --volume "$host_pgdata":"$container_pgdata" \
  --publish 5003:5432 \
  postgres:9.5
