#!/bin/sh

# N.B.
# This file is intended for use in your development environment, and not
# production

set -e

secrets_location="$HOME/.local/share/coconut-estate-toolbox/secrets"

echo "Starting development-mode secrets keeper"
RUST_LOG="warp=debug,secrets_keeper=debug" \
  bin/helpers/run-package secrets_keeper run \
  --binding 127.0.0.1:5002 \
  --location "$secrets_location"
